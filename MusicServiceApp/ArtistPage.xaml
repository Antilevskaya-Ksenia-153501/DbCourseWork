<Page x:Class="MusicService.ArtistPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicService"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="ArtistPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Button Content="Navigate to Songs" Click="NavigateToSongs_Click" Margin="5"/>
            <Button Content="Navigate to Albums" Click="NavigateToAlbums_Click" Margin="5"/>
        </StackPanel>


        <StackPanel VerticalAlignment="Bottom">
            <Button Content="Log In" Click="LogIn_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
            <Button Content="Log Out" Click="LogOut_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
